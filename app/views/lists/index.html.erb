
<h2>todos</h2>

<div class="col-md-3"></div>

<div class="col-md-6">

  <div class="btn-group" role="group" aria-label="visible-type">
    <%= link_to "All", visible_all_lists_path, class: @class_all %>
    <%= link_to "Active", visible_active_lists_path, class: @class_active %>
    <%= link_to "Complete", visible_complete_lists_path, class: @class_complete %>
  </div>

  <hr>

  <%= simple_form_for @new_list do |f| %>
    <%= f.input :content, label: false %>
  <% end %>

  <% @lists.each do |list| %>

    <% if @visible == "All" || (@visible == "Active" && !list.done) || (@visible == "Complete" && list.done) %>
      <%= form_for list do |f| %>
        <div class="input-group" style="padding-bottom:2px;">
          <span class="input-group-btn">
            <% if list.done? %>
              <%= link_to "undo", done_toggle_list_path(list), method: :post, class: "btn btn-info", type: "button" %>
            <% else %>
              <%= link_to "V", done_toggle_list_path(list), method: :post, class: "btn btn-info", type: "button" %>
            <% end %>
          </span>
          <%= f.text_field :content, class: 'form-control' %>
          <span class="input-group-btn">
              <%= link_to "X", list_path(list), method: :delete, class: "btn btn-default", type: "button" %>
          </span>
        </div>
      <% end %>
    <% end %>

  <% end %>

</div>

