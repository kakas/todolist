
<%= render "new_board_form" %>

<ul class="nav nav-tabs">
  <% @boards.each do |board| %>
    <%= content_tag :li, role: "presentation", class: nav_tab_active_or_not(board) do %>
      <%= link_to board.title, change_board_path(board) %>
    <% end %>
  <% end %>
</ul>

<br>
<%= render "edit_board_form" %>
<br>

<div class="row">
  <div class="col-md-4 col-md-offset-4 col-xs-offset-1">
    <div class="btn-group">
      <%= link_to "All",      visible_all_board_path(@board),      method: :post, class: visible_selected_class("All") %>
      <%= link_to "Active",   visible_active_board_path(@board),   method: :post, class: visible_selected_class("Active") %>
      <%= link_to "Complete", visible_complete_board_path(@board), method: :post, class: visible_selected_class("Complete") %>
      <%= link_to board_path(@board), class: "btn btn-default", method: :delete, data: { confirm: "確定刪除這個Board?" } do %>
        <i class="fa fa-folder-o"></i>
        <i class="fa fa-long-arrow-right"></i>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= render "new_list_form" %>

    <% @board.lists.each do |list| %>
      <% if list.id.present? %>
        <% if visible?(list) %>
          <%= form_for [@board, list] do |f| %>
            <div class="input-group" style="padding-bottom:2px;">
              <span class="input-group-btn">
                <% if list.done? %>
                  <%= link_to done_toggle_board_list_path(@board, list), method: :post, class: "btn btn-info" do %>
                    <i class="fa fa-check-circle fa-lg"></i>

                  <% end %>
                <% else %>
                  <%= link_to done_toggle_board_list_path(@board, list), method: :post, class: "btn btn-default" do %>
                    <i class="fa fa-circle-thin fa-lg"></i>

                  <% end %>
                <% end %>
              </span>
              <%= f.text_field :content, class: 'form-control' %>
              <span class="input-group-btn">
                <%= link_to  board_list_path(@board, list), method: :delete, class: "btn btn-default" do %>
                  <i class="fa fa-trash"></i>

                <% end %>
              </span>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
